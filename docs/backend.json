{
  "entities": {
    "Product": {
      "title": "Product",
      "description": "Represents a product in the HetalShruti Boutique catalog.",
      "type": "object",
      "properties": {
        "name": { "type": "string", "description": "Name of the product." },
        "slug": { "type": "string", "description": "URL-friendly slug for the product." },
        "description": { "type": "string", "description": "Detailed description of the product." },
        "price": { "type": "number", "description": "Price of the product." },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "alt": { "type": "string" }
            },
            "required": ["id", "alt"]
          }
        },
        "category": { "type": "string", "enum": ["kurtas", "kurta-sets", "lehengas"] },
        "tags": { "type": "array", "items": { "type": "string", "enum": ["regular", "festive"] } },
        "sizes": { "type": "array", "items": { "type": "string", "enum": ["S", "M", "L", "XL", "XXL"] } },
        "stock": { "type": "number", "description": "Number of items available in stock." }
      },
      "required": ["name", "slug", "description", "price", "images", "category", "stock"]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer's order.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user who placed the order." },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "name": { "type": "string" },
              "size": { "type": "string" },
              "quantity": { "type": "number" },
              "price": { "type": "number" }
            },
            "required": ["productId", "name", "size", "quantity", "price"]
          }
        },
        "total": { "type": "number" },
        "shippingInfo": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "email": { "type": "string" },
            "address": { "type": "string" },
            "city": { "type": "string" },
            "postalCode": { "type": "string" },
            "country": { "type": "string" }
          },
          "required": ["name", "email", "address", "city", "postalCode", "country"]
        },
        "paymentScreenshotUrl": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["verification-pending", "confirmed", "shipped", "delivered", "cancelled"],
          "description": "The current status of the order."
        },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "items", "total", "shippingInfo", "paymentScreenshotUrl", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "structure": [
      {
        "path": "products/{productId}",
        "definition": {
          "entityName": "Product",
          "schema": { "$ref": "#/backend/entities/Product" },
          "description": "Stores product information for the HetalShruti Boutique catalog."
        }
      },
      {
        "path": "users/{userId}/orders/{orderId}",
        "definition": {
          "entityName": "Order",
          "schema": { "$ref": "#/backend/entities/Order" },
          "description": "Stores orders for each user."
        }
      }
    ]
  }
}
